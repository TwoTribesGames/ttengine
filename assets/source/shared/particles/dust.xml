<?xml version="1.0" encoding="iso-8859-1"?>
<ParticleTrigger xmlns="http://intranet.twotribes.com/schemas/common/particletrigger.xsd" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://intranet.twotribes.com/schemas/common/particletrigger.xsd http://intranet.twotribes.com/schemas/common/particletrigger.xsd">
	<ParticleCulling enabled="true"/>
	<ParticleEmitter max_particles="100" x="0" y="1" delay="0" space="world" ignore_fog="false">
		<RenderGroup value="300"/>
		<Texture filename="particles/dirt_dust_white.png"/>
		<FrameAnimations framesize="0">
			<Animation start="0" end="0" fps="30" type="loop"/>
		</FrameAnimations>
		<EmissionCircle radius="30" innerradius="1"/>
		<ExternalForce min_x="-0.02" max_x="0.03" min_y="-0.025" max_y="0.025"/>
		<BlendMode type="add"/>
		<PreGeneration time="0" step="0"/>
		<Emission particles="1000" type="continuous" lifetime="0"/>
		<ParticleOrientation type="rotation"/>
		<Velocity min_x="0" max_x="0" min_y="0" max_y="0"/>
		<VelocityFriction min="0" max="0"/>
		<ParticleLife min="2.5" max="7.5"/>
		<Size min_start="0.1" max_start="0.15"/>
		<Weight min_start="1" max_start="1" min_end="1" max_end="1"/>
		<Rotation min_start="-180" max_start="180" min_speed="0" max_speed="0"/>
		<RotationForce min="0" max="0"/>
		<RotationFriction min="0" max="0"/>
		<Frame min_start="0" max_start="0"/>
		<MinStartColor r="255" g="255" b="255" a="218"/>
		<MaxStartColor r="255" g="255" b="255" a="107"/>
		<MinEndColor r="255" g="255" b="255" a="213"/>
		<MaxEndColor r="255" g="255" b="255" a="127"/>
		<Fade in="0.4" out="0.4" type="percentage"/>
		<ExternalImpulseWeight min="0" max="0"/>
	</ParticleEmitter>
</ParticleTrigger>
